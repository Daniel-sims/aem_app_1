<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_size_small"
    android:layout_marginTop="@dimen/padding_size_normal"
    android:layout_marginEnd="@dimen/padding_size_small"
    android:layout_marginBottom="@dimen/padding_size_large"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_module_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/module_image_height"
            android:layout_marginStart="@dimen/padding_size_small"
            android:layout_marginTop="@dimen/padding_size_small"
            android:layout_marginEnd="@dimen/padding_size_small"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_module_title"
            style="@style/Text.AEM.Subtitle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_size_small"
            android:paddingTop="@dimen/padding_size_small"
            android:paddingEnd="@dimen/padding_size_normal"
            android:paddingBottom="@dimen/padding_size_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_module_image"
            tools:text="Title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
